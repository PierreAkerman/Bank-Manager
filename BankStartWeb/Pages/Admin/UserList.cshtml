@page
@model BankStartWeb.Pages.Admin.UserListModel
@{
}
<style>
    .mytable {
        /*box-shadow: 1px 2px 10px;*/
        /*border-radius: 10px;*/
        margin-top: 20px;
    }
    .mytitle {
        padding: 0;
        margin: 0;
        text-align: center;
    }
</style>

<section>
    <div class="container mt-2">
        <div>
            <div class="mytitle title">
                <h1>Users</h1>
                <span class="border"></span>
            </div>
            <div >
                <a class="btn btn-main-sm" asp-page="/Admin/RegisterUser">New User</a>
            </div>
        </div>

        <div class="mytable">
            <table class="table table-hover">
                <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Role/s</th>
                <th>Edit</th>

                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        @foreach (var role in user.Roles)
                        {
                            <td>@role</td>
                        }
                        <td><a asp-page="/Admin/UpdateUser" asp-route-id="@user.Id"><i class='bx bxs-edit'></i></a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</section>
