@page
@model BankStartWeb.Pages.Admin.RegisterUserModel
@{
}


<section class="signin-page account">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="block text-center">
                    <h2 class="text-center">Create New User</h2>
                    <form class="text-left clearfix mt-30" method="Post">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control"  placeholder="Enter Email">
                            <span asp-validation-for="Email" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control"  placeholder="Enter Password">
                            <span asp-validation-for="Password" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SelectedRoles">Select Role/s</label>
                            <select class="form-control" asp-for="SelectedRoles" asp-items="@Model.Roles" >
                            </select>
                            <span asp-validation-for="SelectedRoles" class="field-validation-error"></span>
                        </div>
                        <button type="submit" class="btn btn-main text-center">Register User</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<form method="Post">

    <div class="form-group">
        <input class="form-control" asp-for="Email">
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>
    
    <div class="form-group">
        <input class="form-control" asp-for="Password">
        <span asp-validation-for="Password" class="field-validation-error"></span>
    </div>
                    
    <div class="form-group">
        <label asp-for="SelectedRoles">Roles</label>
        <select class="form-control" asp-for="SelectedRoles" asp-items="@Model.Roles" >
        </select>
        <span asp-validation-for="SelectedRoles" class="field-validation-error"></span>
    </div>

    <input type="submit" class="btn " value="Create User">

</form>

<partial name="Shared/_ValidationScriptsPartial"/>