@page
@model BankStartWeb.Pages.Accounts.DepositModel
@{
}
<div class="card">
    <div class="card-header">
        <h1>Deposit</h1>
    </div>
    <div class="container">
        <ul>
            <li>Name: @Model.Fullname</li>
            <li>Balance: @Model.Balance</li>
            <li>Account: @Model.AccountType</li>
        </ul>
        <form method="post">
            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input class="form-control" asp-for="Amount">
                <span asp-validation-for="Amount" class="field-validation-error"></span>
            </div>
            <button type="submit" class="btn">Make Deposit</button>
        </form>
    </div>
</div>