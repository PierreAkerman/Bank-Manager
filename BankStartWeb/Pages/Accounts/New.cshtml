@page
@model BankStartWeb.Pages.Accounts.NewModel
@{
}

<section class="contact-us section bg-gray" id="contact">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="title text-center">
                    <h4>Operation</h4>
                    <h2>Create New Account</h2>
                    <span class="border"></span>
                    <h5 class="text-info">@Model.Fullname</h5>
                    <span class="border"></span>
                    <p>Choose the type of account to create, in the input field below</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Contact Form -->
            <div class="contact-form col-12 col-md-6  mx-auto" >
                <form id="contact-form" method="post">
                    <div class="form-group">
                        <select class="form-control" asp-for="AccountTypeId" asp-items="@Model.AllAccountTypes" >
                        </select>
                        <span asp-validation-for="AccountTypeId" class="field-validation-error"></span>
                    </div>
                    <div>
                        <input type="submit" id="contact-submit" class="btn btn-transparent mb-1" value="Create Account">

                    </div>						
                </form>
                <a class="btn" id="contact-submit" asp-page="/Customers/CustomerDetails" asp-route-customerid="@Model.CustomerId">Back to @Model.Fullname's Profile</a>
            </div>
            <!-- ./End Contact Form -->
        </div> <!-- end row -->
			
    </div> <!-- end container -->
</section> <!-- end section -->

<partial name="Shared/_ValidationScriptsPartial"/>

