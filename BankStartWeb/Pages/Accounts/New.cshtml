@page
@model BankStartWeb.Pages.Accounts.NewModel
@{
}
<div class="card">
    <div class="card-header">
        <h1>New Account</h1>
        <h2>@Model.Fullname</h2>
    </div>
    <form method="post"> 
        <div class="form-group">
                <label asp-for="AccountTypeId">Account Type</label>
                <select class="form-control" asp-for="AccountTypeId" asp-items="@Model.AllAccountTypes" >
                </select>
                <span asp-validation-for="AccountTypeId" class="field-validation-error"></span>
            </div>  
            <button type="submit" class="btn">Save</button>
    </form>
</div>