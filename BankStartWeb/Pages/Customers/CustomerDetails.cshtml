@page
@model BankStartWeb.Pages.Customers.CustomerDetailsModel
@{
}
<h1>@Model.Fullname</h1>
<button class="btn btn-main-sm"><a asp-page="/Accounts/New" asp-route-customerId="@Model.Id">New Account</a></button>
<button class="btn btn-main-sm"><a asp-page="/Customers/Edit" asp-route-customerid="@Model.Id">Edit Customer</a></button>
<table class="table table-sm">
    <tr><th colspan="2" class="tableHeader">Personal Info</th></tr>
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th scope="row">Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th scope="row">Surname</th>
        <td>@Model.Surname</td>
    </tr>
    <tr>
        <th scope="row">National Id</th>
        <td>@Model.NationalId</td>
    </tr>
    <tr>
        <th scope="row">Birthday</th>
        <td>@Model.Birthday.ToString("d")</td>
    </tr>
    <tr>
        <th scope="row">Country</th>
        <td>@Model.Country</td>
    </tr>
    </table>
<table class="table table-sm">
    <tr><th colspan="2" class="tableHeader">Contact Info</th></tr>
    <tr>
        <th scope="row">Address</th>
        <td>@Model.Streetaddress</td>
    </tr>
    <tr>
        <th scope="row">City</th>
        <td>@Model.City</td>
    </tr>
    <tr>
        <th scope="row">Zip-Code</th>
        <td>@Model.Zipcode</td>
    </tr>
    <tr>
        <th scope="row">Country Code</th>
        <td>@Model.CountryCode</td>
    </tr>
    <tr>
        <th scope="row">Tel Country Code</th>
        <td>@Model.TelephoneCountryCode</td>
    </tr>
    <tr>
        <th scope="row">Telephone</th>
        <td>@Model.Telephone</td>
    </tr>
    <tr>
        <th scope="row">Email</th>
        <td>@Model.EmailAddress</td>
    </tr>
</table>


<table class="table table-sm">

    <tr><th colspan="2" class="tableHeader">Accounts</th></tr>

    @foreach (var account in Model.Accounts)
    {
        <tr>
            <td> <a asp-page="/Accounts/AccountDetails" asp-route-accountid="@account.Id">@account.AccountType Account</a></td>
            <td>@account.Balance</td>
            @*<td><a asp-page="/Accounts/AccountDetails" asp-route-accountid="@account.Id">Details</a></td>*@
        </tr>
    }
    <tr><th scope="row">Total Balance</th>
        <td>@Model.TotalSaldo</td></tr>
</table>

<a class="nav-link text-primary" asp-page="/Customers/CustomerList">Back</a>